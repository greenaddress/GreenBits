<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="hideTwoFacWarning"
        android:title="@string/hideTwoFacWarning" />

    <CheckBoxPreference
        android:key="hideSingleTwoFacWarning"
        android:title="@string/hideSingleTwoFacWarning" />

    <CheckBoxPreference
        android:key="twoFacEmail"
        android:title="@string/twoFacEmail" />

    <CheckBoxPreference
        android:key="twoFacGauth"
        android:title="@string/twoFacGauth" />

    <CheckBoxPreference
        android:key="twoFacSMS"
        android:title="@string/twoFacSMS" />

    <CheckBoxPreference
        android:key="twoFacPhone"
        android:title="@string/twoFacPhoneCall" />

    <Preference
        android:key="twoFacLimits"
        android:title="@string/twoFacLimitTitle"
        android:summary="@string/twoFacLimitDisabled" />

    <CheckBoxPreference
        android:key="twoFacNLocktimeEmails"
        android:title="@string/enable_nlocktime_emails" />

    <Preference
        android:key="send_nlocktime"
        android:title="@string/request_nlocktime_email"
        android:dependency="twoFacNLocktimeEmails" />

</PreferenceScreen>
